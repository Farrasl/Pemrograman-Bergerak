<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenghitungPersegiPanjang2"
    android:padding="20dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Aplikasi Menghitung Luas Dan Keliling Persegi Panjang"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Panjang: "
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/Panjang"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:hint="Panjang"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lebar: "
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/Lebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lebar"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Luas: "
        android:textColor="#000000"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/HasilLuas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hasil Luas"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Keliling: "
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/Hasilkeliling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hasil Keliling"
        android:inputType="number"/>

</LinearLayout>
